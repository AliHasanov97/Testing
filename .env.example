# ==============================================
# FULL ENTERPRISE DOCKER STACK - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and update with your values
# NEVER commit .env file to git!

# ----------------------------------------------
# APPLICATION
# ----------------------------------------------
APP_NAME=testing-app
APP_ENVIRONMENT=Production
APP_PORT=8080

# ----------------------------------------------
# DATABASE - PostgreSQL
# ----------------------------------------------
POSTGRES_VERSION=16-alpine
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=testing_db
POSTGRES_USER=testing_user
POSTGRES_PASSWORD=change_me_in_production_strong_password_here

# PostgreSQL Connection Pool
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB

# ----------------------------------------------
# PGADMIN
# ----------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me_strong_password

# ----------------------------------------------
# REDIS
# ----------------------------------------------
REDIS_VERSION=7-alpine
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password

# ----------------------------------------------
# NGINX
# ----------------------------------------------
NGINX_VERSION=1.25-alpine
DOMAIN_NAME=your-domain.com
SSL_EMAIL=your-email@example.com

# ----------------------------------------------
# MONITORING - Prometheus
# ----------------------------------------------
PROMETHEUS_VERSION=latest
PROMETHEUS_RETENTION=30d

# ----------------------------------------------
# MONITORING - Grafana
# ----------------------------------------------
GRAFANA_VERSION=latest
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_grafana_password

# ----------------------------------------------
# LOGGING - Loki
# ----------------------------------------------
LOKI_VERSION=latest

# ----------------------------------------------
# RESOURCE LIMITS
# ----------------------------------------------
# App
APP_CPU_LIMIT=1.0
APP_MEMORY_LIMIT=512M
APP_MEMORY_RESERVATION=256M

# Database
DB_CPU_LIMIT=2.0
DB_MEMORY_LIMIT=1G
DB_MEMORY_RESERVATION=512M

# Redis
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=256M

# Nginx
NGINX_CPU_LIMIT=0.5
NGINX_MEMORY_LIMIT=128M

# Prometheus
PROMETHEUS_CPU_LIMIT=1.0
PROMETHEUS_MEMORY_LIMIT=512M

# Grafana
GRAFANA_CPU_LIMIT=0.5
GRAFANA_MEMORY_LIMIT=256M

# ----------------------------------------------
# BACKUP
# ----------------------------------------------
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# ----------------------------------------------
# TIMEZONE
# ----------------------------------------------
TZ=Asia/Baku
